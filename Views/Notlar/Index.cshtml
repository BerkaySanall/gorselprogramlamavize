@using MVCProject.Models.EntityFramework;
@model List<Tbl_Notlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Not ID</th>
        <th>Ders</th>
        <th>Öğrenci</th>
        <th>Sınav 1</th>
        <th>Sınav 2</th>
        <th>Sınav 3</th>
        <th>Proje</th>
        <th>Ortalama</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var not in Model)
        {
        <tr>
            <td>@not.NotId</td>
            <td>@not.Tbl_Dersler.DersAd</td>
            <td>@not.Tbl_Ogrenci.OgrAd @not.Tbl_Ogrenci.OgrSoyad</td>
            <td>@not.Sınav1</td>
            <td>@not.Sınav2</td>
            <td>@not.Sınav3</td>
            <td>@not.Proje</td>
            <td>@not.Ortalama</td>
            <td>@not.Durum</td>
            <td>
                <a href="~/Notlar/NotGetir/@not.NotId" class="btn btn-warning">Guncelle</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="~/Notlar/YeniSinav" class="btn btn-primary">Yeni Sınav Girişi</a>